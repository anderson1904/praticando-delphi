unit Classes.Banco;

interface
uses   System.Generics.Collections,Classes.Clientes;

type
  TBanco = class

  private
    FClientes: Tobjectlist<TCliente>;

    procedure AdicionarConta;
    procedure AdicionarCliente;

    function BuscarConta(aNumero:string): string;
    function BuscarCliente(aCPF: string): string;

    procedure DesativarConta;
    procedure DesativarCliente;

    function GerarRelatorioTransacoes:   string;

  protected
    { protected declarations }
  public
    { public declarations }

  published
    { published declarations }
end;
implementation

end.
